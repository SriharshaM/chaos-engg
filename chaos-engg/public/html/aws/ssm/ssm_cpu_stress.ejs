  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">AWS Chaos</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">AWS</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <!-- Main row -->
            <div class="stepper-wrapper">
                <div class="stepper-item completed">
                  <div class="step-counter"><i class="fas fa-check"></i></div>
                  <div class="step-name">Credentials</div>
                </div>
                <div class="stepper-item completed">
                  <div class="step-counter"><i class="fas fa-check"></i></div>
                  <div class="step-name">Service</div>
                </div>
                <div class="stepper-item completed">
                  <div class="step-counter"><i class="fas fa-check"></i></div>
                  <div class="step-name">Activity</div>
                </div>
                <div class="stepper-item active">
                  <div class="step-counter">4</div>
                  <div class="step-name">Parameters</div>
                </div>
                <div class="stepper-item">
                    <div class="step-counter">5</div>
                    <div class="step-name">Result</div>
                </div>
              </div>
    </div><!-- /.container-fluid -->
    <div class="row">
        <div class="col-md-8">
            <div class="card card-primary">
                <form action="" method="POST">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="instance_ids">Choose instances to be targeted:</label><br>
                            <div class="form-check">
                                <% if(json_resp.Reservations.length > 0) { %>
                                    <table border=0>
                                        <% for(i in json_resp.Reservations) { %>
                                            <% var select_instance_id = json_resp.Reservations[i].Instances[0].InstanceId %>
                                            <% var select_az = json_resp.Reservations[i].Instances[0].Placement.AvailabilityZone %>
                                            <% var dyn_option = '<input class="form-check-input" type="checkbox" name="' + select_instance_id + '" value="true">' + select_instance_id + '</option><br>' %>
                                            <tr><td style="padding-left:15px"><%- dyn_option %></td><td style="padding-left:15px"><%= select_az %></td></tr>
                                        <% } %>
                                    </table>
                                <% } else { %>
                                    <h5>No instance found meeting IAM requirements!</h5>
                                <% } %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="document_version">Document version:</label>
                            <input type='text' name="document_version" class="form-control" id="document_version" placeholder="Enter document version">
                        </div>
                        <div class="form-group">
                            <label for="cpu">Specify CPU stressors(0 for all):</label>
                            <input type='text' name="cpu" class="form-control" id="cpu" placeholder="Enter CPU stressors">
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <input type='checkbox' name="dependencies" class="form-check-input" id="dependencies" value='true'>
                                <label for="dependencies" class="form-check-label">Install dependencies?</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="duration">Duration(seconds):</label>
                            <input type='text' name="duration" class="form-control" id="duration" placeholder="Enter duration" required>
                        </div>
                        <div class="form-group">
                            <label for="timeout">Timeout(seconds):</label>
                            <input type='text' name="timeout" class="form-control" id="timeout" placeholder="Enter timeout">
                        </div>
                        <div class="form-group">
                            <label for="max_concurrency">Max concurrency:</label>
                            <input type='text' name="max_concurrency" class="form-control" id="max_concurrency" placeholder="Enter maximum concurrency">
                        </div>
                        <div class="form-group">
                            <label for="max_error">Specify max_error:</label>
                            <input type='text' name="max_error" class="form-control" id="max_error" placeholder="Specify maximum error">
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="/aws/ssm" class="btn btn-default">Previous</a>
                        <button type="submit" class="btn btn-primary float-right">Next</>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Action History</h3>
                </div>
                <div class="card-body">
                    <ul class="products-list product-list-in-card pr-2">
                        <% if(ssm_user_history.length > 0) { %>
                            <% for(i in ssm_user_history) { %>
                                <li class="item">
                                    <div class="product-title">
                                        <%= ssm_user_history[i].type %>
                                        <span class="badge float-right">
                                            <%= ssm_user_history[i].TimeCompleted %>
                                        </span>
                                    </div>
                                    <div class="product-description">
                                        <%= ssm_user_history[i].status %>
                                    </div>
                                </li>
                            <% } %>
                        <% } else { %>
                            <li class="item">
                                <div class="product-title">History is empty!</div>
                                <div class="product-description">
                                    Completed experiments appear here
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
